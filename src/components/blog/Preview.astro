---
import Arrow from "@/icons/arrow.astro";
import ArrowFilled from "@/icons/arrow-filled.astro";
import VoteCounter from "./VoteCounter.jsx";

interface Props {
	emoji: string;
	title: string;
	votes: string;
	slug: string;
}

const { emoji, title, votes, slug } = Astro.props;
---

<article
	class="border border-white px-4 py-1 mt-4 hover:border-green-500 hover:text-green-500 transition-all">
	<div class="flex flex-row justify-between items-center gap-8">
		<div class="flex flex-row items-center gap-4">
			<div class="text-2xl">{emoji}</div>
			<div class="max-w-xs w-full md:max-w-none md:w-auto">
				<a
					href={`/blog/${slug}`}
					class="block md:inline-block overflow-hidden text-ellipsis">
					{title}
				</a>
			</div>
		</div>
		<div>
			<div class="flex flex-row items-center gap-4">

		</div>
	</div>
</article>

<style>
	div:hover a {
		color: var(--contrast);
		transition-property: all;
		transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
		transition-duration: 150ms;
	}
</style>
