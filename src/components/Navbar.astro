---
import { content } from "@content_en";
import ThemeIcon from "./ThemeIcon.astro";
const { domain } = content.basics;

const currentPath = Astro.url.pathname;
---

<nav class="bg-customBlack py-4 dark:bg-customBlack mb-12">
  <div class="container flex flex-wrap justify-between items-center mx-auto px-4">
    <a href="/" class="flex items-center">
      <span
        class={`${
          currentPath === "/" ? "dark:text-green-500 underline underline-offset-8" : ""
        } self-center uppercase font-bold whitespace-nowrap text-green-500 hover:text-green-500 hover:underline underline-offset-8 font-sans text-base sm:text-lg md:text-xl`}
      >
        {domain}
      </span>
    </a>
    
    <ul class="flex flex-row space-x-4 items-center">
      <li>
        <a
          href="/blog"
          class={`font-sans font-bold text-sm sm:text-base md:text-lg
            ${
              currentPath === "/blog"
                ? "dark:text-white text-white underline underline-offset-8"
                : "dark:text-white"
            } 
            hover:underline underline-offset-8 
            hover:text-green-500 uppercase text-white`}
        >
          blog
        </a>
      </li>
      <li>
        <a
          href="/#contact"
          class={`font-sans font-bold text-sm sm:text-base md:text-lg
            ${
              currentPath === "/#contact"
                ? "dark:text-white text-white underline underline-offset-8"
                : "dark:text-white"
            } 
            hover:underline underline-offset-8 
            hover:text-green-500 uppercase text-white`}
        >
          contact
        </a>
      </li>
    </ul>
  </div>
</nav>