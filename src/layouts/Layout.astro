---
// import "@fontsource/lekton/400.css";
// import "@fontsource/lekton/700.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
		<body>
			<slot />
		</body>
	<style is:global>
		:root {
			--white: #ffffff;
			--dark: #000000;
			--gray: #333333;
			--light-gray: #f5f5f5;
			/* --primary: #00f335;
		--secondary: #ff0080;
		--accent: #79ffe1; */
			--background: var(--dark);
			--text: var(--white);
			/* --link: var(--primary);*/
			--lines: rgba(255, 255, 255, 0.5);
		}
		html {
			font-size: 16px;
			font-family:
				"Lekton",
				Monaco,
				Lucida Console,
				"Courier New",
				Courier,
				monospace;
			background: #000000;
			/* letter-spacing: -0.025rem; */
			scroll-behavior: smooth;
		}

		body,
		figure {
			margin: 0;
			padding: 0 8rem;
			max-width: 1000px;
			border-left: 1px solid var(--lines);
			border-right: 1px solid var(--lines);
			margin: 0 auto;
			max-height: 100%;
			min-height: 100vh;
		}

		@media (max-width: 768px) {
			body,
			figure {
				padding: 0 2rem;
				max-width: 370px;
			}
		}

		a {
			text-decoration: none;
		}
		ul {
			list-style: none;
			margin: 0;
			padding: 0;
		}
		*,
		*::before,
		*::after {
			box-sizing: border-box;
		}

		h1,
		h2,
		h3,
		h4 {
			margin: 0;
			font-family:
				system-ui,
				-apple-system,
				BlinkMacSystemFont,
				"Segoe UI",
				Roboto,
				Oxygen,
				Ubuntu,
				Cantarell,
				"Open Sans",
				"Helvetica Neue",
				sans-serif;
			color: var(--text);
		}

		p {
			color: var(--text);
			font-size: 0.875rem;
			line-height: 1.5;
			margin: 0;
			text-wrap: pretty;
		}
	</style>
</html>
