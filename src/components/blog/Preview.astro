---
import Arrow from "@/icons/arrow.astro";
import ArrowFilled from "@/icons/arrow-filled.astro";
import VoteCounter from "./VoteCounter.jsx";

interface Props {
	emoji: string;
	title: string;
	votes: string;
	slug: string;
}

const { emoji, title, votes, slug } = Astro.props;
---

<div class="border border-white px-4 py-1 mt-4">
	<div class="flex flex-row justify-between items-center gap-8">
		<div class="flex flex-row items-center gap-4">
			<div class="text-2xl">{emoji}</div>
			<div>
				<a
					href={`/blogs/${slug}`}
					class="max-w-xl overflow-hidden whitespace-nowrap text-ellipsis hover:text-green-500">
					{title}
				</a>
				<p class="text-sm opacity-80 hidden">@raulcanodev on Twitter</p>
			</div>
		</div>
		<div>
			<div class="flex flex-row items-center gap-4">
				<VoteCounter initialVotes={votes} client:load />
			</div>
		</div>
	</div>
</div>

