		:root {
			--white: #ededed;
			--dark: #000;
			--gray: #333333;
			--light-gray: #f5f5f5;
			--contrast: #21c55e;
			--background: var(--dark);
			--text: #e7e7e7; 
			--blog-content: #e7e7e7;
			--lines: rgba(255, 255, 255, 0.5);
		}
		html {
			font-size: 16px;
			font-family:
			monospace,
			Monaco,
				Lucida Console,
				"Courier New",
				Courier;
			background-color: var(--dark);
			background-image: linear-gradient(
					90deg,
					rgba(5, 239, 52, 0.2) 1px,
					transparent 1px
				),
				linear-gradient(
					180deg,
					rgba(12, 240, 73, 0.2) 1px,
					transparent 1px
				),
				linear-gradient(
					45deg,
					rgba(1, 254, 1, 0.2) 1px,
					transparent 1px
				),
				linear-gradient(
					-45deg,
					rgba(10, 255, 80, 0.2) 1px,
					transparent 1px
				);
			background-size:
				20px 20px,
				20px 20px,
				20px 20px,
				20px 20px;
			/* letter-spacing: -0.025rem; */
			scroll-behavior: smooth;
			/* cursor: none !important; */
		}
		body,
		figure {
			background: var(--dark);
			margin: 0;
			padding: 0rem 6rem;
			max-width: 1000px;
			border-top: 2px solid var(--contrast);
			margin: 0 auto;
			max-height: 100%;
			min-height: 100vh;
			box-shadow: -2px 23px 110px -25px rgba(0, 0, 0, 1);
			-webkit-box-shadow: -2px 23px 110px -25px rgba(0, 0, 0, 1);
			-moz-box-shadow: -2px 23px 110px -25px rgba(0, 0, 0, 1);
			/* cursor: none; */
			z-index: 99;
		}

		@media (max-width: 768px) {
			body,
			figure {
				padding: 0 1rem;
				border: none;
				border-top: 3px solid var(--contrast);
			}
		}

		a {
			text-decoration: none;
			color: var(--text);
			/* cursor: none; */
		}
		ul {
			list-style: none;
			margin: 0;
			padding: 0;
		}
		*,
		*::before,
		*::after {
			box-sizing: border-box;
			/* cursor: none !important; */
		}

		h1,
		h2,
		h3,
		h4 {
			margin: 0;
			font-family:
				system-ui,
				-apple-system,
				BlinkMacSystemFont,
				"Segoe UI",
				Roboto,
				Oxygen,
				Ubuntu,
				Cantarell,
				"Open Sans",
				"Helvetica Neue",
				sans-serif;
			color: var(--text);
		}

		p {
			color: var(--text);
			font-size: 0, 875rem;
			line-height: 1.5;
			margin: 0;
			text-wrap: pretty;
		}
